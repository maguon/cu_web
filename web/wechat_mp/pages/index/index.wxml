<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <block wx:if="{{!hasUserInfo && canIUse}}"> 
     <image bindtap="bindViewTap" class="userinfo-avatar" src="../../assets/images/player.png" mode="cover"></image>
     <button class='userinfo-nickname' size='mini' wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">微信登录</button>
      <!-- <text class="userinfo-nickname">微信昵称</text> -->
      <text class="userinfo-phone">未绑定手机</text>
    </block>

      <block wx:else>
       <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      <black class="phoneimg">
      <image class="phone" src="../../assets/images/phone.png"></image>
      <text class="userinfo-phone">获取用户手机号码</text>
      </black>
    </block>
  </view>

  <block wx:if="{{hasUserInfo && canIUse}}"> 
      <view class="usermotto">
      <text class="user-motto">{{motto}}</text>
    </view>
    <view class="usermottosmall">
      <text class="user-mattosmall">{{mottosmall}}</text>
    </view>
  </block>
  
  <block wx:else>
    <view class='carbox'>
      <view class='left'>
        <image class='left-img' src='../../assets/images/car.png'></image>
          <text class='left-text'>辽B12345
            <text  class='left-car'>奥迪A6</text></text>
      </view>
      <view class='right' bindtap='bindCarDetail'>
      <view class='center'>
        <image class='center-img' src='../../assets/images/code.png'></image>
      </view>
      <view>
        <image class='right-img' src='../../assets/images/arrow.png'></image>
      </view> 
    </view>
    </view>
     <view class="divLine"></view>
  </block>
 
</view>

