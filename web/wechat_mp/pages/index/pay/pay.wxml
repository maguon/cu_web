<scroll-view class="scroll" scroll-y="true">
<view class='title'>请您在 
<view class='pay-time'> 
<text decode="{{true}}" space="{{true}}">&nbsp;</text>
{{clock}}<text decode="{{true}}" space="{{true}}">&nbsp;</text>
</view>
 内完成支付</view>

<view class='pay'>
   <view class="pay-num">支付金额</view>
   <view class='money'>{{price}}.00</view>
   <view class='yuan'>元</view>
</view>

<view class='title'>选择支付方式</view>
<view class="weui-cells weui-cells_after-title">
 <radio-group bindchange="radioChange">
   <label class="weui-cell weui-check__label" wx:for="{{payList}}" wx:key='u'>
     <radio class="weui-check" value="{{index}}"  checked="{{item.checked}}"/>
         <image class='image' src='{{item.src}}'></image>
         <view class="weui-cell__bd">{{item.name}}</view>
    <view class="weui-cell__hd weui-check__hd_in-checkbox">
    <icon class="icon" type="circle" size="18" wx:if="{{!item.checked}}"></icon>
    <icon class="icon" type="success" size="18" wx:if="{{item.checked}}"></icon>
    </view>
     </label>
 </radio-group>
</view>

<view class='btn'>
     <button disabled="{{bntFlag}}"   bindtap="bindTap" class="btn-area" hover-class="weui-cell_active">确定</button>
</view>

</scroll-view>