
.weui-media-box__title{
  display: flex;
  flex-direction: row;
   font-size: 18px;
}
.title{
  margin-left: 15px;
  height: 40px;
  display: flex;
  align-items: center;
}
.time{
  color: #a3a2a2;
  width: 100%;
  text-align: right;
  font-size: 12px;
  margin-bottom: 5px;
}
.box{
  display: flex;
   flex-direction: row;
   justify-content: center;
}
.image{
  background: rgb(214, 213, 218);
}
.box__desc{
  font-size: 15px;
  color: #696868;
}

.weui-media-box__thumb{
  width: 100%;
  height: 100%;
}
.thumb{
  height: 30px;
  width: 25px;
}

